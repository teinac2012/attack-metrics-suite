generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

model User {
  id                    String         @id @default(cuid())
  username              String         @unique
  passwordHash          String
  email                 String?        @unique
  role                  Role           @default(USER)
  licenses              License[]
  sessions              Session[]
  accounts              Account[]
  sessionLocks          SessionLock[]
  loginAttempts         LoginAttempt[]
  loginAudit            LoginAudit[]
  analyses              Analysis[]
  isLocked              Boolean        @default(false)
  lockedUntil           DateTime?
  failedLoginCount      Int            @default(0)
  lastFailedLoginAt     DateTime?
  // Política de rotación de contraseñas
  passwordRotatedAt     DateTime?
  mustChangePassword    Boolean        @default(false)
  createdAt             DateTime       @default(now())
  updatedAt             DateTime       @updatedAt
}

model License {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  startDate DateTime @default(now())
  endDate   DateTime
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SessionLock {
  id         String   @id @default(cuid())
  userId     String   @unique
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  sessionId  String
  lastSeen   DateTime @default(now())
  deviceHash String?
}

model LoginAttempt {
  id        String   @id @default(cuid())
  userId    String?
  username  String
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  success   Boolean
  ipAddress String?
  userAgent String?
  deviceHash String?
  failReason String? // INVALID_PASSWORD, USER_NOT_FOUND, ACCOUNT_LOCKED, etc.
  createdAt DateTime @default(now())

  @@index([username])
  @@index([userId])
  @@index([createdAt])
}

model LoginAudit {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  action       String   // LOGIN_SUCCESS, LOGOUT, SESSION_EXPIRED, etc.
  ipAddress    String?
  userAgent    String?
  deviceHash   String?
  sessionId    String?
  metadata     String? // JSON string con información adicional
  createdAt    DateTime @default(now())

  @@index([userId])
  @@index([createdAt])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Analysis {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  appName     String   // "IA Pases Táctico", "Attack Metrics", "Shooting Analysis"
  title       String   // Nombre del análisis (ej: "Real Madrid vs Barcelona")
  data        String   // JSON string con los datos del análisis
  tags        String[] // Tags/etiquetas para categorizar
  notes       String?  // Notas adicionales del usuario
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([appName])
  @@index([createdAt])
}
